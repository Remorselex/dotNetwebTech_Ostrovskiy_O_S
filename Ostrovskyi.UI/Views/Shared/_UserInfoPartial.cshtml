@using Microsoft.AspNetCore.Identity;
@using System.Security.Claims;
@await Component.InvokeAsync("Cart")
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Ostrovskyi.UI.Entities

@if (User.Identity.IsAuthenticated)
{


    <div class="btn-group ms-4 nav-color">
        <button class="btn btn-secondary btn-sm dropdown-toggle"
                type="button" id="dropdownMenuButton"
                data-bs-toggle="dropdown"
                aria-expanded="false">
            @User.Claims.FirstOrDefault(c => c.Type.Equals("Name", StringComparison.OrdinalIgnoreCase))?.Value
            <img src="~/Images/4.jpg" width="20"
                 alt="User" class="rounded nav-color" />
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <li>
                <span class="dropdown-item-text">
                    <img src="~/Images/2.png"
                         width="50" alt="User" class="rounded" />

                </span>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form id="logoutForm" class="form-inline" action="#">
                    <a asp-area="Identity"
                       asp-route-returnurl="/"
                       asp-page="/Account/Logout">
                    </a>
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <div class="navbar-nav ms-auto">
        <a asp-area="Identity"
           asp-page="/Account/Login"
           class="nav-item nav-link">
            Login
        </a>
    </div>
}

